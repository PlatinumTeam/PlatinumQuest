					vertSizing = "bottom";
					position = (%activeWidth - 45) @ "-4";
					extent = "45 45";
					minExtent = "8 8";
					visible = "1";
					helpTag = "0";
					text = "-";
					command = "OptionsTexturePackDlg.deactivatePack(\"" @ expandEscape(%name) @ "\");";
					groupNum = "-1";
