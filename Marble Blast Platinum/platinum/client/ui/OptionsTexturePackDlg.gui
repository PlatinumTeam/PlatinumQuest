					vertSizing = "bottom";
					position = (%activeWidth - 119) @ "-4";
					extent = "45 45";
					minExtent = "8 8";
					visible = "1";
					helpTag = "0";
					text = "^";
					command = "OptionsTexturePackDlg.movePackUp(\"" @ expandEscape(%name) @ "\");";
					groupNum = "-1";
					buttonType = "PushButton";
					repeatPeriod = "1000";
					repeatDecay = "1";
