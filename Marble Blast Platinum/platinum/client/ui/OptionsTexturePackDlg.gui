			if (%name !$= "default") {
				%box.add(new GuiBorderButtonCtrl(%downButton) {
					profile = "PQButton26Profile";
					horizSizing = "right";
					vertSizing = "bottom";
					position = (%activeWidth - 82) @ "-4";
					extent = "45 45";
					minExtent = "8 8";
					visible = "1";
					helpTag = "0";
					text = "v";
